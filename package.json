{
	"name": "read-properties-action",
	"main": "lib/src/main.js",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc",
		"clean": "rimraf lib dist coverage",
		"check-types": "tsc --noEmit --pretty",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint-check": "eslint .",
		"lint": "eslint --fix .",
		"package": "pnpm build && ncc build ./src/main.ts --minify --source-map --target es2023 --stats-out build-stats.json --license licenses.txt",
		"test": "jest"
	},
	"license": "MIT",
	"keywords": [
		"action",
		"github",
		"read",
		"properties",
		"file",
		"java",
		"properties file",
		"gradle",
		"maven",
		"gradle.properties"
	],
	"dependencies": {
		"@actions/core": "1.10.1",
		"action-input-parser": "^1.2.38",
		"glob": "^10.0.0",
		"properties-file": "^2.2.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-async-to-generator": "^7.20.7",
		"@babel/plugin-transform-modules-commonjs": "^7.21.2",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.21.0",
		"@commitlint/cli": "^17.5.0",
		"@commitlint/config-conventional": "^17.4.4",
		"@commitlint/cz-commitlint": "^17.5.0",
		"@jest/globals": "^29.5.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^10.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/release-notes-generator": "^11.0.0",
		"@types/jest": "29.5.2",
		"@types/node": "18.17.0",
		"@typescript-eslint/eslint-plugin": "5.59.11",
		"@typescript-eslint/parser": "5.59.11",
		"@vercel/ncc": "0.38.0",
		"babel-jest": "^29.5.0",
		"commitizen": "^4.3.0",
		"eslint": "8.44.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-airbnb-typescript-prettier": "^5.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-no-one-time-vars": "^2.4.2",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-unicorn": "^48.0.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"husky": "^8.0.3",
		"jest": "29.5.0",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"lint-staged": "^14.0.0",
		"prettier": "3.0.3",
		"rimraf": "^5.0.1",
		"semantic-release": "^22.0.0",
		"semantic-release-major-tag": "^0.3.0",
		"ts-jest": "29.1.0",
		"typescript": "5.2.2"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"packageManager": "pnpm@8.7.5",
	"engines": {
		"node": ">=18",
		"pnpm": ">=7",
		"npm": ">=8.5.0"
	}
}
