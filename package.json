{
	"name": "read-properties-action",
	"main": "lib/src/main.js",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc",
		"check-types": "tsc --noEmit --pretty",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint-check": "eslint .",
		"lint": "eslint --fix .",
		"package": "pnpm build && ncc build ./src/main.ts --minify --source-map --target es2023 --stats-out build-stats.json --license licenses.txt",
		"test": "jest"
	},
	"license": "MIT",
	"keywords": [
		"action",
		"github",
		"read",
		"properties",
		"file",
		"java",
		"properties file",
		"gradle",
		"maven",
		"gradle.properties"
	],
	"dependencies": {
		"@actions/core": "1.10.0",
		"action-input-parser": "^1.2.38",
		"glob": "^9.3.2",
		"properties-file": "^2.2.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-async-to-generator": "^7.20.7",
		"@babel/plugin-transform-modules-commonjs": "^7.21.2",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.21.0",
		"@commitlint/cli": "^17.5.0",
		"@commitlint/config-conventional": "^17.4.4",
		"@commitlint/cz-commitlint": "^17.5.0",
		"@jest/globals": "^29.5.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@types/jest": "29.5.0",
		"@types/node": "20.5.9",
		"@typescript-eslint/eslint-plugin": "5.57.0",
		"@typescript-eslint/parser": "5.57.0",
		"@vercel/ncc": "0.36.1",
		"babel-jest": "^29.5.0",
		"commitizen": "^4.3.0",
		"eslint": "8.37.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-airbnb-typescript-prettier": "^5.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-no-one-time-vars": "^2.4.2",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-unicorn": "^46.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "^8.0.3",
		"jest": "29.5.0",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"lint-staged": "^13.2.0",
		"prettier": "2.8.7",
		"semantic-release": "^21.0.0",
		"semantic-release-major-tag": "^0.3.0",
		"ts-jest": "29.0.5",
		"typescript": "5.0.3"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"packageManager": "pnpm@8.1.0",
	"engines": {
		"node": ">=18",
		"pnpm": ">=7",
		"npm": ">=8.5.0"
	}
}
