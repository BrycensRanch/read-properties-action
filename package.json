{
	"name": "read-properties-action",
	"main": "lib/src/main.js",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc",
		"clean": "rimraf lib dist coverage",
		"check-types": "tsc --noEmit --pretty",
		"format": "prettier --write **/*.ts",
		"format-check": "prettier --check **/*.ts",
		"lint-check": "eslint .",
		"lint": "eslint --fix .",
		"package": "pnpm build && ncc build ./src/main.ts --minify --source-map --target es2023 --stats-out build-stats.json --license licenses.txt",
		"test": "jest"
	},
	"license": "MIT",
	"keywords": [
		"action",
		"github",
		"read",
		"properties",
		"file",
		"java",
		"properties file",
		"gradle",
		"maven",
		"gradle.properties"
	],
	"dependencies": {
		"@actions/core": "1.11.1",
		"@pnpm/merge-lockfile-changes": "^6.0.1",
		"action-input-parser": "^1.2.38",
		"glob": "^11.0.0",
		"properties-file": "^3.5.4"
	},
	"devDependencies": {
		"@babel/plugin-transform-async-to-generator": "^7.24.6",
		"@babel/plugin-transform-modules-commonjs": "^7.24.6",
		"@babel/preset-env": "^7.24.6",
		"@babel/preset-typescript": "^7.24.6",
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/cz-commitlint": "^19.2.0",
		"@eslint/js": "^9.3.0",
		"@jest/globals": "^29.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/release-notes-generator": "^14.0.0",
		"@types/eslint__js": "^8.42.3",
		"@types/jest": "29.5.14",
		"@types/node": "22.9.0",
		"@typescript-eslint/eslint-plugin": "8.14.0",
		"@typescript-eslint/parser": "8.14.0",
		"@vercel/ncc": "0.38.2",
		"babel-jest": "^29.7.0",
		"commitizen": "^4.3.0",
		"eslint": "9.14.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-airbnb-typescript-prettier": "^5.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "28.9.0",
		"eslint-plugin-no-one-time-vars": "^2.5.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-unicorn": "^56.0.0",
		"eslint-plugin-unused-imports": "^4.0.0",
		"husky": "^9.0.11",
		"jest": "29.7.0",
		"jest-ts-webcompat-resolver": "^1.0.0",
		"lint-staged": "^15.2.5",
		"prettier": "3.3.3",
		"rimraf": "^6.0.0",
		"semantic-release": "^24.0.0",
		"semantic-release-major-tag": "^0.3.2",
		"ts-jest": "29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "5.6.3",
		"typescript-eslint": "^8.0.0"
	},
	"config": {
		"commitizen": {
			"path": "@commitlint/cz-commitlint"
		}
	},
	"packageManager": "pnpm@9.13.0",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8",
		"npm": ">=9"
	}
}
